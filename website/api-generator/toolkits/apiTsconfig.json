{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "removeComments": false,
    "moduleResolution": "node"
  },
  "include": ["../../../toolkits/commerce/src/**/*.ts", "../../../toolkits/commerce/src/**/*.tsx"],
  "exclude": [
    "../../../toolkits/commerce/src/**/*test.ts",
    "../../../toolkits/commerce/src/**/*test.tsx",
    "commerce/src/declarations",
    "node_modules",
    "dist",
    "es"
  ]
}
